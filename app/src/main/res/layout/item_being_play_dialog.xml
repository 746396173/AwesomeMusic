<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/btn_50_selector"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/beingPlayFlag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kaibo.music.weight.MarqueeTextView
        android:id="@+id/musicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:maxWidth="200dp"
        android:text="等你下课-周杰伦"
        android:textColor="@color/colorThemeGray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/btn_50_selector"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp"
        android:src="@drawable/item_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deleteItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/deleteItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_50_selector"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>